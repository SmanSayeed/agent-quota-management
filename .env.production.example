# MongoDB
MONGO_URI=mongodb://mongodb:27017/agent-management

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost

# File Upload
UPLOAD_DIR=./uploads/passports
MAX_FILE_SIZE=5242880

# Image Security
IMAGE_TOKEN_SECRET=your-image-token-secret-change-this
IMAGE_TOKEN_EXPIRES_IN=600

# Pool Settings
POOL_INITIAL_QUOTA=1000
